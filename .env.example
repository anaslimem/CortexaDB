# Mnemos gRPC server address (host:port)
MNEMOS_GRPC_ADDR=127.0.0.1:50051

# HTTP status endpoint for browser checks
MNEMOS_STATUS_ADDR=127.0.0.1:50052

# Directory where WAL + segment files are stored
MNEMOS_DATA_DIR=/tmp/mnemos_grpc

# Embedding dimension expected by the vector index
MNEMOS_VECTOR_DIM=3

# Sync policy: strict | batch | async
MNEMOS_SYNC_POLICY=strict

# Batch mode settings
MNEMOS_SYNC_BATCH_MAX_OPS=64
MNEMOS_SYNC_BATCH_MAX_DELAY_MS=25

# Async mode setting
MNEMOS_SYNC_ASYNC_INTERVAL_MS=25

# Periodic checkpointing
MNEMOS_CHECKPOINT_ENABLED=false
MNEMOS_CHECKPOINT_EVERY_OPS=10000
MNEMOS_CHECKPOINT_EVERY_MS=30000

# Service auth: none | api_key
MNEMOS_AUTH_MODE=none
MNEMOS_API_KEY=

# Intent-anchor query tuning
MNEMOS_INTENT_ANCHOR_SEMANTIC=semantic meaning, similar content, concept match
MNEMOS_INTENT_ANCHOR_RECENCY=recent events, latest updates, time, timeline, schedule
MNEMOS_INTENT_ANCHOR_GRAPH=relationships, connections, linked people, social graph
MNEMOS_INTENT_GRAPH_HOPS_2_THRESHOLD=0.55
MNEMOS_INTENT_GRAPH_HOPS_3_THRESHOLD=0.80
MNEMOS_INTENT_IMPORTANCE_PCT=20
